<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favorite List</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <section class="left">
        <% collection.forEach(elem=>{ %>
        <% if(elem.characterdirection.includes('Left')) {%>
        <a href="/favorite-quotes/<%= elem.id %> "><img src="<%= elem.image %> " alt=""></a>
        <h2><%= elem.character %> </h2>
        <p><%= elem.quote %> </p>
        <% } %>
        <% }) %>
    </section>
    <section class="right">
        <% collection.forEach(elem=>{ %>

        <% if(elem.characterdirection.includes('Right')) {%>
        <a href="/favorite-quotes/<%= elem.id %> "><img src="<%= elem.image %> " alt=""></a>
        <h2><%= elem.character %> </h2>
        <p><%= elem.quote %> </p>
        <% } %>
        <% }) %>

    </section>
</body>

</html>